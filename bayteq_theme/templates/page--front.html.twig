{#
/**
 * @file
 * Template for the front page (home).
 */
#}
<div class="layout-container">
  
  {# Header #}
  <header role="banner" style="background-color: var(--card); border-bottom: 1px solid var(--border); position: sticky; top: 0; z-index: 100;">
    <div style="max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; display: flex; align-items: center; justify-content: space-between; height: 4rem;">
      
      <div style="display: flex; align-items: center; gap: 0.75rem;">
        {% if site_logo %}
          <a href="{{ path('<front>') }}">
            <img src="{{ site_logo }}" alt="{{ site_name }}" style="height: 2rem;">
          </a>
        {% endif %}
        <a href="{{ path('<front>') }}" style="font-family: var(--font-family-oswald); font-size: var(--text-h3); font-weight: var(--font-weight-semibold); color: var(--foreground); text-decoration: none;">
          Portal de Desarrolladores
        </a>
      </div>

      <nav style="display: flex; gap: 2rem;">
        <a href="/" style="font-family: var(--font-family-source); font-size: var(--text-base); color: var(--accent-red); text-decoration: none; font-weight: var(--font-weight-semibold);">Inicio</a>
        <a href="/apis" style="font-family: var(--font-family-source); font-size: var(--text-base); color: var(--foreground); text-decoration: none;">APIs</a>
        <a href="/docs" style="font-family: var(--font-family-source); font-size: var(--text-base); color: var(--foreground); text-decoration: none;">Docs</a>
        <a href="/user" class="btn btn-primary" style="padding: 0.5rem 1rem;">Acceder</a>
      </nav>
    </div>
  </header>

  <main role="main">

    {# Hero Section #}
    <section style="position: relative; background-color: var(--primary); color: var(--primary-foreground); overflow: hidden;">
      <div style="position: relative; padding: 4rem 1.5rem;">
        <div style="max-width: 1200px; margin: 0 auto;">
          <div style="max-width: 48rem;">
            <h1 style="font-family: var(--font-family-source); font-size: var(--text-h1); font-weight: var(--font-weight-semibold); margin-bottom: 1.5rem; font-size: 2.5rem; line-height: 1.2;">
              Construye el futuro con las <span style="color: var(--accent-red);">APIs de Bayteq</span>
            </h1>
            <p style="font-family: var(--font-family-source); font-size: var(--text-h4); color: rgba(248, 250, 252, 0.9); margin-bottom: 2rem; font-size: 1.125rem;">
              Accede a nuestro ecosistema de APIs empresariales. Integraciones rápidas, 
              documentación completa y soporte técnico dedicado.
            </p>
            <div style="display: flex; flex-wrap: wrap; gap: 1rem;">
              <a href="/apis" class="btn btn-primary">
                Explorar Catálogo →
              </a>
              <a href="/docs" class="btn btn-secondary">
                Ver Documentación
              </a>
            </div>
          </div>
        </div>
      </div>

      {# Stats Bar #}
      <div style="border-top: 1px solid rgba(248, 250, 252, 0.1); background-color: rgba(35, 63, 80, 0.8);">
        <div style="max-width: 1200px; margin: 0 auto; padding: 2rem 1.5rem;">
          <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 2rem; text-align: center;">
            <div>
              <div style="font-family: var(--font-family-oswald); font-size: 2.5rem; font-weight: var(--font-weight-semibold);">24+</div>
              <div style="font-family: var(--font-family-source); font-size: var(--text-sm); color: rgba(248, 250, 252, 0.8);">APIs Disponibles</div>
            </div>
            <div>
              <div style="font-family: var(--font-family-oswald); font-size: 2.5rem; font-weight: var(--font-weight-semibold);">1,200+</div>
              <div style="font-family: var(--font-family-source); font-size: var(--text-sm); color: rgba(248, 250, 252, 0.8);">Desarrolladores</div>
            </div>
            <div>
              <div style="font-family: var(--font-family-oswald); font-size: 2.5rem; font-weight: var(--font-weight-semibold);">5M+</div>
              <div style="font-family: var(--font-family-source); font-size: var(--text-sm); color: rgba(248, 250, 252, 0.8);">Peticiones/día</div>
            </div>
            <div>
              <div style="font-family: var(--font-family-oswald); font-size: 2.5rem; font-weight: var(--font-weight-semibold);">99.9%</div>
              <div style="font-family: var(--font-family-source); font-size: var(--text-sm); color: rgba(248, 250, 252, 0.8);">Uptime</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {# Quick Access Cards #}
    <section style="padding: 4rem 1.5rem;">
      <div style="max-width: 1200px; margin: 0 auto;">
        <h2 style="font-family: var(--font-family-source); font-size: var(--text-h2); font-weight: var(--font-weight-semibold); color: var(--foreground); margin-bottom: 2rem; font-size: 2rem;">
          Accesos Rápidos
        </h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;">
          
          <a href="/apis" class="card card-hover" style="text-decoration: none;">
            <div style="width: 3rem; height: 3rem; background-color: var(--chart-1); border-radius: var(--radius); display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <polyline points="16 18 22 12 16 6"></polyline>
                <polyline points="8 6 2 12 8 18"></polyline>
              </svg>
            </div>
            <h3 style="font-family: var(--font-family-oswald); font-size: var(--text-h3); font-weight: var(--font-weight-semibold); color: var(--foreground); margin-bottom: 0.5rem;">Explorar APIs</h3>
            <p style="font-family: var(--font-family-source); font-size: var(--text-base); color: var(--muted-foreground); margin-bottom: 1rem;">
              Descubre nuestro catálogo completo de APIs disponibles
            </p>
            <div style="font-family: var(--font-family-source); font-size: var(--text-base); font-weight: var(--font-weight-semibold); color: var(--primary);">
              Ir ahora →
            </div>
          </a>

          <a href="/docs" class="card card-hover" style="text-decoration: none;">
            <div style="width: 3rem; height: 3rem; background-color: var(--chart-2); border-radius: var(--radius); display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
              </svg>
            </div>
            <h3 style="font-family: var(--font-family-oswald); font-size: var(--text-h3); font-weight: var(--font-weight-semibold); color: var(--foreground); margin-bottom: 0.5rem;">Documentación</h3>
            <p style="font-family: var(--font-family-source); font-size: var(--text-base); color: var(--muted-foreground); margin-bottom: 1rem;">
              Guías técnicas, tutoriales y referencias completas
            </p>
            <div style="font-family: var(--font-family-source); font-size: var(--text-base); font-weight: var(--font-weight-semibold); color: var(--primary);">
              Ir ahora →
            </div>
          </a>

          <a href="/create-app" class="card card-hover" style="text-decoration: none;">
            <div style="width: 3rem; height: 3rem; background-color: var(--chart-3); border-radius: var(--radius); display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
              </svg>
            </div>
            <h3 style="font-family: var(--font-family-oswald); font-size: var(--text-h3); font-weight: var(--font-weight-semibold); color: var(--foreground); margin-bottom: 0.5rem;">Crear Aplicación</h3>
            <p style="font-family: var(--font-family-source); font-size: var(--text-base); color: var(--muted-foreground); margin-bottom: 1rem;">
              Registra tu app y obtén credenciales de acceso
            </p>
            <div style="font-family: var(--font-family-source); font-size: var(--text-base); font-weight: var(--font-weight-semibold); color: var(--primary);">
              Ir ahora →
            </div>
          </a>

        </div>
      </div>
    </section>

    {# Welcome Section #}
    <section style="background-color: var(--muted); padding: 4rem 1.5rem;">
      <div style="max-width: 1200px; margin: 0 auto;">
        <div class="card" style="padding: 3rem;">
          <h2 style="font-family: var(--font-family-oswald); font-size: var(--text-h2); font-weight: var(--font-weight-semibold); color: var(--foreground); margin-bottom: 1rem; font-size: 1.875rem;">
            Bienvenido al Portal de Desarrolladores
          </h2>
          <p style="font-family: var(--font-family-source); font-size: var(--text-base); color: var(--card-foreground); margin-bottom: 1rem; line-height: 1.6;">
            Bayteq pone a tu disposición un conjunto robusto de APIs empresariales diseñadas 
            para acelerar tu desarrollo. Ya sea que estés construyendo aplicaciones móviles, 
            integraciones web o soluciones IoT, nuestras APIs te proporcionan la base que necesitas.
          </p>
        </div>
      </div>
    </section>

    {# Drupal Content #}
    {{ page.content }}

  </main>

  {# Footer #}
  <footer role="contentinfo" style="background-color: var(--sidebar); border-top: 1px solid var(--border); margin-top: 4rem;">
    <div style="max-width: 1200px; margin: 0 auto; padding: 2rem 1.5rem;">
      <div style="border-top: 1px solid var(--border); padding-top: 1.5rem; text-align: center;">
        <p style="font-family: var(--font-family-source); font-size: var(--text-sm); color: var(--muted-foreground); margin: 0;">
          © {{ "now"|date("Y") }} Bayteq. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </footer>

</div>
